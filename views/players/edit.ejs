<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Player</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/babas/<%= baba_id %>/players/<%= player._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="email" name="player[email]" value="<%= player.email %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="tel" name="player[phone]" value="<%= player.phone %>">
                </div>

                <% var goleiro = ""; %>
                <% if(player.goalkeeper == "1") { %>
                    <% goleiro = "checked" %>
                <% } %>
                <div class="form-group">
                <label>Goleiro</label>
                <input type="checkbox" name="player[goalkeeper]" value="true" <%=goleiro%> ><br>
                </div>


                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/babas">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

